@{
    ViewData["Title"] = "Mostrar servicios";
    Layout = "~/Views/Shared/_Layout-03.cshtml";
}

<div class="card flex-fill w-100">
    <div class="card-header">
        <h2 class="card-title mb-0">Resultado</h2>
    </div>
    <div class="card-body">
        <table id="mitabla" class="table">
            <thead>
                <tr>
                    <th class="id_producto">Id producto</th>
                    <th>Nombre</th>
                    <th>Precio</th>
                    <th></th>

                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < @ViewBag.longitud; i = i + 6)
                {
                    <tr>
                        <td class="id_producto"> @ViewBag.lista[i]</td>
                        <td> @ViewBag.lista[i + 1]</td>
                        <td> @ViewBag.lista[i +2]</td>
                        <td>
                            <!-- Button trigger modal -->
                        <button type="button" class="btn btn-primary" data-bs-toggle="modal"
                            data-bs-target="#staticBackdrop_@i">
                                Más info
                            </button>

                            <!-- Modal -->
                        <div class="modal fade" id="staticBackdrop_@i" data-bs-backdrop="static"
                            data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel"
                            aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h4 class="modal-title" id="staticBackdropLabel"><strong>Información sobre la
                                                    empresa</strong></h4>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal"
                                            aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            El nombre de la empresa es @ViewBag.lista[i+3] y tiene como
                                            número
                                            telefónico @ViewBag.lista[i+5], también tiene el correo
                                            @ViewBag.lista[i+4]. Ahí podrá comunicarse con la empresa para
                                            seguir el proceso de adquisición.
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary"
                                            data-bs-dismiss="modal">Cerrar</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
        @* <a id="envio-boton" asp-controller="TableroCM" asp-action="MostrarServicios" class="btn btn-primary">Enviar
            algo</a> *@

    </div>
</div>



<script src="/js/simple-datatables.js"></script>

<script>
    const dataTable = new simpleDatatables.DataTable("#mitabla", options = {
        labels: {
            placeholder: "Buscar...", perPage: "{select} entradas por página",
            noRows: "No entradas encontradas", noResults: "Ningún resultado encontrado",
            info: "Mostrando {start} a {end} de {rows} entradas"
        }
    });

</script>