@{
    ViewData["Title"] = "Inicio sesión";
    Layout = "/Views/Shared/_Layout.cshtml";
    var error = TempData["Error"] as string;
}

<div class="container py-5 h-100">
    <div class="row d-flex align-items-center justify-content-center h-100">
        <div class="col-md-8 col-lg-7 col-xl-6">
            <img src="/img/imagen-inicio.png" class="img-fluid" alt="Phone image">
        </div>
        <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
            <div class="mb-3">
                @if (!string.IsNullOrEmpty(error))
                {
                    <div class="text-danger"> @error </div>
                }
            </div>
            <form method="POST" asp-action="Ingresar">
                <!-- Email input -->
                <div class="form-outline mb-4">
                    <input type="correo" id="correo" class="form-control form-control-lg"
                        placeholder="ejemplo@ejemplo.com" name="correo" required />
                    <label class="form-label" for="correo">Correo</label>
                </div>

                <!-- Password input -->
                <div class="form-outline mb-4">
                    <input type="password" id="contraseña" class="form-control form-control-lg"
                        placeholder="micontraseña" name="contraseña" required />
                    <label class="form-label" for="contraseña">Contraseña</label>
                </div>

                <div class="d-flex justify-content-around align-items-center mb-4">
                    <!-- Checkbox -->
                    @* <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="" id="form1Example3" checked />
                        <label class="form-check-label" for="form1Example3"> Remember me </label>
                        </div> *@
                    <a href="#!">¿Olvidó la contraseña?</a>
                    <a asp-controller="Registro" asp-action="Index">¿No tiene cuenta? Regístrese</a>
                </div>

                <!-- Submit button -->
                <div class="d-grid">
                    <button type="submit" id="boton" class="btn btn-primary btn-lg btn-block">Iniciar
                        sesión</button>
                </div>

            </form>
        </div>
    </div>
</div>